modules = ["web", "php-8.2", "nodejs-20"]
run = "npm run watch"

[nix]
channel = "stable-24_05"

[deployment]
run = ["sh", "-c", "npm run watch"]

[workflows]
runButton = "Angular Development Server"

[[workflows.workflow]]
name = "Angular Development Server"
author = 38136212
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx ng serve --host 0.0.0.0 --port 4200"

[[ports]]
localPort = 4200
externalPort = 80
